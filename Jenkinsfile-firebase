pipeline {
  agent {
    docker { image 'androidsdk/android-31' }
  }

  environment {
    FIREBASE_TOKEN_CREDENTIALS_ID = 'firebase_token_credentials_id'
  }

  stages {
    stage('Unit Test') {
        steps {
            sh './gradlew clean testDevDebugUnitTest'
        }
    }

    stage('Build') {
        steps {
            sh './gradlew assembleDevRelease'
        }
    }

    stage('Distribute App to Firebase') {
        steps {
            withCredentials([string(credentialsId: "$FIREBASE_TOKEN_CREDENTIALS_ID", variable: 'FIREBASE_TOKEN')]) {
                sh ("curl -u export FIREBASE_TOKEN=${FIREBASE_TOKEN}")
                sh 'FIREBASE_TOKEN=${FIREBASE_TOKEN} ./gradlew appDistributionUploadRelease'
                sh './gradlew appDistributionUploadDevRelease'
            }
        }
    }
  }
}